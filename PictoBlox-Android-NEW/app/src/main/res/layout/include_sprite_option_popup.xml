<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_so_duplicate"
            android:id="@+id/iv_so_duplicate"
            android:clickable="true"
            android:background="@drawable/ripple_sprite_option_bg"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@+id/iv_so_edit"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/iv_so_delete"
            app:layout_constraintTop_toTopOf="@+id/iv_so_edit"
            app:layout_constraintBottom_toBottomOf="@+id/iv_so_edit" android:layout_marginEnd="16dp"/>
    <ImageView
            android:padding="8dp"
            android:background="@drawable/ripple_sprite_option_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_so_edit"
            android:id="@+id/iv_so_edit"
            android:clickable="true"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/iv_so_duplicate" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_chainStyle="packed"/>
    <ImageView
            android:background="@drawable/ripple_sprite_option_bg"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_so_delete"
            android:id="@+id/iv_so_delete"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/iv_so_duplicate"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/iv_so_duplicate"
            app:layout_constraintBottom_toBottomOf="@+id/iv_so_duplicate"/>
</androidx.constraintlayout.widget.ConstraintLayout>