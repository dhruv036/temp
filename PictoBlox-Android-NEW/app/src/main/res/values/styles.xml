    <style name="cpp_signUp" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>

    </style>


    <style name="style_tv_login_buttons" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ripple_button_bg</item>

    </style>

    <style name="style_tv_login_sub_title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/login_sub_title_text_size</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="style_toolbar_title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="style_et_login" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/login_edit_text</item>
        <item name="android:textSize">@dimen/login_et_text_size</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/round_login_edit_text</item>
        <item name="android:ems">13</item>
    </style>

    <style name="style_incomplete_sign_up" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/animation_on</item>
        <item name="android:windowExitAnimation">@anim/animation_off</item>
    </style>
</resources>

