<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/white">

    <item>
        <layer-list>

            <item
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp">
                <shape android:shape="oval">
                    <solid android:color="@color/colorPrimary" />

                </shape>
            </item>
            <!-- Smaller red circle in front -->
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:width="2dp"
                        android:color="@color/colorPrimary" />

                    <size
                        android:width="48dp"
                        android:height="48dp" />

                </shape>
            </item>

            <item
                android:bottom="12dp"
                android:drawable="@drawable/ic_done_project_select"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />


        </layer-list>
    </item>
</ripple>

